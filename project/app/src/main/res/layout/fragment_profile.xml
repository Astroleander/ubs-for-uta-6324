<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.profile.ProfileFragment"
    android:layout_marginBottom="56dp">

    <Button
        android:id="@+id/view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_profile"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/my_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_profile"
        android:text="@string/title_btn_profile_my_posts"
        />

    <Button
        android:id="@+id/my_Billings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_posts"
        android:text="@string/my_billings"
        />

    <FrameLayout
        android:id="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@id/my_Billings"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        />

    <Button
        android:id="@+id/my_send_or_lend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:text="@string/btn_my_sell_or_lend"
        />

    <Button
        android:id="@+id/my_buy_or_borrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_send_or_lend"
        android:text="@string/btn_my_buy_or_borrow"
        />

    <Button
        android:id="@+id/my_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_buy_or_borrow"
        android:text="@string/btn_my_club"
        />

    <FrameLayout
        android:id="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@id/my_club"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        />

    <Button
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:text="@string/btn_send_message"
        />
</androidx.constraintlayout.widget.ConstraintLayout>